<h1>Books</h1>

<%= link_to 'home', root_path %>
<br><br>

<table border="1">
  <thead>
    <tr>
      <th>book id</th>
      <th>title</th>
      <th>author</th>
      <th>author id</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.title %></td>
        <td><%= book.author.name %></td>
        <td><%= book.author_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
ordered by author name and book id.
